{
	"name":"Corny Cornbread Corn Casserole",


	"ingredients": {
		"cream-style corn":"1 can",
		"whole kernel corn":"1 can",
		"eggs, beaten":"2",
		"margarine or butter":"1 stick",
		"sour cream":"1 cup",
		"chopped onion":"4 tablespoons",
		"chopped green pepper":"2 tablespoons",
		"Jiffy Corn Bread mix":"1 box",
		"salt":"1/4 teaspoon",
		"pepper":"1/2 teaspoon"
	},


	"directions": {
		"1":"Preheat oven to 350 degrees fahrenheit",
		"2":"Grease a 2qt casserole dish",
		"3":"Mix all ingredients together in a large bowl",
		"4":"Pour mixture into the casserole dish",
		"5":"Bake for 45 minutes, or until top is golden brown",
		"6":"Let stand for 5 minues. Enjoy!"
	}
}